<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="orientation" content="landscape">
    <title>Forçar Orientação Horizontal</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: black;
            color: white;
            overflow: hidden;
        }
        .landscape-warning {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: black;
            color: white;
            font-size: 24px;
            text-align: center;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div class="video-container">
        <video id="videoPlayer" controls autoplay width="100%" height="100%">
            <source src="alunospassando.mp4" type="video/mp4">
            Seu navegador não suporta vídeos HTML5.
        </video>
    </div>
    <div class="landscape-warning" id="landscapeWarning">
        Por favor, gire o dispositivo para visualização horizontal.
    </div>

    <script>
        // Função para verificar a orientação do dispositivo
        function checkOrientation() {
            const warning = document.getElementById('landscapeWarning');
            if (window.innerHeight > window.innerWidth) {
                // Mostra o aviso se estiver em retrato
                warning.style.display = 'flex';
            } else {
                // Oculta o aviso se estiver em paisagem
                warning.style.display = 'none';
            }
        }

        // Adiciona eventos para verificar a orientação
        window.addEventListener('resize', checkOrientation);
        window.addEventListener('orientationchange', checkOrientation);

        // Verifica a orientação inicial
        document.addEventListener('DOMContentLoaded', () => {
            checkOrientation();
        });
    </script>
</body>
</html>
