<script>

document.querySelectorAll('.vimeo-player').forEach(function(playerContainer) {
    var fullscreenButton = playerContainer.querySelector('.fullscreen-btn');

    fullscreenButton.addEventListener('click', function() {
    if (!document.fullscreenElement) {
        // Tentar entrar em tela cheia
        playerContainer.requestFullscreen().then(() => {
            // Após entrar em tela cheia, tente bloquear a orientação
            if (screen.orientation && screen.orientation.lock) {
                screen.orientation.lock('landscape-primary').catch(err => {
                    console.warn('Falha ao bloquear a orientação:', err);
                });
            }
        }).catch(err => {
            console.log(`Erro ao entrar em tela cheia: ${err.message}`);
        });
    } else {
        // Sair do modo de tela cheia
        document.exitFullscreen().then(() => {
            if (screen.orientation && screen.orientation.unlock) {
                screen.orientation.unlock();
            }
        }).catch(err => {
            console.log(`Erro ao sair de tela cheia: ${err.message}`);
        });
    }
});

});



var tmin = 0;
var tseg = 4;
  
var tpitch = (tmin * 60000) + (tseg * 1000);
setTimeout('show()', tpitch);
console.log('pitch em:', tpitch,'ms - totalizando',tmin,'min','e',tseg,'seg'); 
function show(){
var list = document.getElementsByClassName('ocultar');
for (var i = 0; i < list.length; i++) {
    
    list[i].style.display = 'block';
    }

        // Oculta o texto "Não feche ou atualize esta página..."
        var mensagemInicial = document.getElementById('mensagem-inicial');
    if (mensagemInicial) {
        mensagemInicial.style.display = 'none';}
    
}

src="https://player.vimeo.com/api/player.js"

    // Função para inicializar todos os players do Vimeo
function initVimeoPlayers() {
    // Seleciona todos os containers de vídeo com a classe 'vimeo-player'
    var players = document.querySelectorAll('.vimeo-player');

    players.forEach(function(container) {
        var iframe = container.querySelector('iframe');
        var overlay = container.querySelector('.overlay');
        var toggleButton = container.querySelector('.play-pause-btn');

        // Cria um player para o iframe atual
        var player = new Vimeo.Player(iframe);

        // Pausa o vídeo após 500ms
        setTimeout(() => {
            player.pause();
        }, 500);

        // Configura eventos para alternar entre play/pause
        player.on('play', function() {
            toggleButton.style.display = 'none'; // Esconde o botão quando o vídeo está tocando
        });

        player.on('pause', function() {
            toggleButton.style.display = 'block'; // Mostra o botão quando o vídeo é pausado
        });

        // Adiciona eventos de clique ao overlay e botão
        overlay.addEventListener('click', function() {
            player.getPaused().then(function(paused) {
                if (paused) {
                    player.play();
                } else {
                    player.pause();
                }
            });
        });

        toggleButton.addEventListener('click', function() {
            player.getPaused().then(function(paused) {
                if (paused) {
                    player.play();
                } else {
                    player.pause();
                }
            });
        });
    });
}

// Inicializar os players assim que a página carregar
window.onload = initVimeoPlayers;


</script>
